<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mall.mapper.AddressMapper">

    <resultMap id="addressMap" type="com.example.mall.entity.Address">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="receiverName" column="receiver_name"/>
        <result property="receiverPhone" column="receiver_phone"/>
        <result property="fullAddress" column="full_address"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO address(user_id, receiver_name, receiver_phone, full_address, create_time)
        VALUES (#{userId}, #{receiverName}, #{receiverPhone}, #{fullAddress}, NOW())
    </insert>

    <select id="findById" resultType="com.example.mall.entity.Address" resultMap="addressMap">
        SELECT * FROM address WHERE id = #{id}
    </select>

    <select id="findByUserId" resultType="com.example.mall.entity.Address" resultMap="addressMap">
        SELECT * FROM address WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>

    <delete id="deleteById">
        DELETE FROM address WHERE id = #{id}
    </delete>

    <update id="update">
        UPDATE address SET
            receiver_name = #{receiverName},
            receiver_phone = #{receiverPhone},
            full_address = #{fullAddress}
        WHERE id = #{id}
    </update>

</mapper>
