<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mall.mapper.OrderItemMapper">
    <resultMap id="orderItemMap" type="com.example.mall.entity.OrderItem">
        <id property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="productId" column="product_id"/>
        <result property="quantity" column="quantity"/>
        <result property="price" column="price"/>
    </resultMap>

    <insert id="insertBatch">
        INSERT INTO order_item (order_id, product_id, quantity, price)
        VALUES
        <foreach collection="items" item="item" separator=",">
            (#{item.orderId}, #{item.productId}, #{item.quantity}, #{item.price})
        </foreach>
    </insert>

    <select id="findByOrderId" resultType="com.example.mall.entity.OrderItem" resultMap="orderItemMap">
        SELECT * FROM order_item WHERE order_id = #{orderId}
    </select>

</mapper>

