<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mall.mapper.OrderMapper">
    <resultMap id="orderMap" type="com.example.mall.entity.Order">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="addressId" column="address_id"/>
        <result property="totalPrice" column="total_price"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO orders (user_id, address_id, total_price, status, create_time)
        VALUES (#{userId}, #{addressId}, #{totalPrice}, #{status}, NOW());
    </insert>

    <select id="findById" resultType="com.example.mall.entity.Order" resultMap="orderMap">
        SELECT * FROM orders WHERE id = #{id}
    </select>

    <select id="findByUserId" resultType="com.example.mall.entity.Order" resultMap="orderMap">
        SELECT * FROM orders WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>

    <update id="updateStatus">
        UPDATE orders
        SET status = #{status}
        WHERE id = #{id}
    </update>

</mapper>

